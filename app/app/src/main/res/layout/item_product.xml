<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <ImageView
        android:id="@+id/ivProduct"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:text="Hola"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/img_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_favorite"
        android:padding="6dp"
        app:layout_constraintBottom_toBottomOf="@id/ivProduct"
        app:layout_constraintEnd_toEndOf="@id/ivProduct" />

    <TextView
        android:id="@+id/ivProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="AYNII Toalla Femenina Reutilizable"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintTop_toBottomOf="@id/ivProduct"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/ivProductType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        tools:text="Nocturna"
        app:layout_constraintTop_toBottomOf="@id/ivProductName"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/ivProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        tools:text="$ 150"
        app:layout_constraintTop_toBottomOf="@id/ivProductType"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/ivProductDiscountPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintStart_toEndOf="@id/ivProductPrice"
        app:layout_constraintTop_toTopOf="@id/ivProductPrice"
        tools:text="Discount Price" />

    <TextView
        android:id="@+id/ivProductDiscountPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:text="N% Descuento"
        android:background="@drawable/discount_background"
        android:padding="4dp"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/ivProduct"
        app:layout_constraintStart_toStartOf="@id/ivProduct"/>


</androidx.constraintlayout.widget.ConstraintLayout>